{
  "compilerOptions": {
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["config/**/*.ts", "src/**/*.ts"]
}
